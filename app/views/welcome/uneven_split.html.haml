.container-fluid.main
  %h1 Check Splitter
  %h2 Split Unevenly
  %p Enter each diner's amounts separated by a space.

  = form_tag('/uneven-results', method: "get") do
    .row
      = label_tag 'Diner 1'
      = number_field_tag(:p1, nil, step: 'any')
    .row
      = label_tag 'Diner 2'
      = number_field_tag(:p2, nil, step: 'any')
    .row
      = label_tag 'Diner 3'
      = number_field_tag(:p3, nil, step: 'any')
    .row
      = label_tag 'Diner 4'
      = number_field_tag(:p4, nil, step: 'any')
    .row
      = label_tag 'Diner 5'
      = number_field_tag(:p5, nil, step: 'any')
    .row
      = label_tag 'Tax Amount:'
      = number_field_tag(:tax, nil, step: 'any')
    .row
      = label_tag 'Tip Percentage'
    .row
      = label_tag '15%'
      = radio_button_tag(:tip, '15%', 0.15)
      = label_tag '18%'
      = radio_button_tag(:tip, '18%', 0.18)
      = label_tag '20%'
      = radio_button_tag(:tip, '20%', 0.20)
      = label_tag '25%'
      = radio_button_tag(:tip, '25%', 0.25)
    = submit_tag 'Split Now'

  %div= link_to 'Split Equally', root_path
